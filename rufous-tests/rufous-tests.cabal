name:                rufous-tests
version:             0.1.0.0
synopsis:            Test suite for rufous
-- description:
license:             BSD3
license-file:        LICENSE
author:              Ben Simner
maintainer:          Ben Simner <benjsimner@gmail.com>
-- category:            Testing
build-type:          Simple
cabal-version:       >=1.10

source-repository head
  type:     git
  location: https://github.com/bensimner/rufous

library
  exposed-modules:     Test.Rufous
                       , Test.Rufous.DUG
                       , Test.Rufous.Profile
                       , Test.Rufous.Signature
                       , Test.Rufous.Extract
                       , Test.Rufous.Generate
                       , Test.Rufous.Run
                       , Test.Rufous.Select
                       , Test.Rufous.TH
                       , Test.Rufous.Options

  build-depends:       base
                       , rufous
  hs-src-dirs:         lib
  default-language:    Haskell2010
  ghc-options:         -Wall

executable rufous-tests
  main-is:             Queue.hs
  build-depends:       rufous-tests
  hs-src-dirs:         exe
  default-language:    Haskell2010
  ghc-options:         -Wall
